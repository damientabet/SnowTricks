{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="css/index.css">
{% endblock %}

{% block body %}
    <img class="img-fluid" src="images/main.jpg" alt="">
    <div class="container mt-4">
        <div class="row">
            {% for trick in tricks %}
                <div class="col-md-3">
                    <a href="{{ path('trick.show', {'id': trick.id, 'slug': trick.slug}) }}">
                        <div class="card shadow">
                            {% for image in trick.images %}
                                {% if image.mainImg == 1 %}
                                    <img src="/images/tricks/{{ image.name }}" class="card-img-top" alt="...">
                                {% endif %}
                            {% endfor %}
                            <div class="card-body">
                                <h5 class="card-title">{{ trick.name }}</h5>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
        <div class="row mt-3">
            <a href="#" class="btn btn-lg btn-primary mx-auto"><i class="fa fa-plus"></i> Voir plus</a>
        </div>
    </div>
{% endblock %}