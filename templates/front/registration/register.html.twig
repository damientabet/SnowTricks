{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center vh-100 bg-light">
        <div class="col-md-3 border shadow p-5 bg-white">
            <h1 class="text-center">Création de compte</h1>
            {{ form_start(registrationForm) }}
                {{ form_label(registrationForm.pseudo) }}
                {{ form_widget(registrationForm.pseudo, {'attr': {'class': 'mb-3 rounded-0 p-4'}}) }}
            {{ form_label(registrationForm.email) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'mb-3 rounded-0 p-4'}}) }}
            {{ form_label(registrationForm.plainPassword) }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'mb-3 rounded-0 p-4'}}) }}
            {{ form_row(registrationForm.agreeTerms) }}

            <button class="btn btn-lg btn-outline-primary btn-block rounded-0">Register</button>
            {{ form_end(registrationForm) }}
            <hr/>
            <a href="{{ path('login') }}">Vous avez déjà un compte ?</a>
        </div>
    </div>
{% endblock %}
