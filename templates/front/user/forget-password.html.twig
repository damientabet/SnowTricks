{% extends 'base.html.twig' %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center vh-100 bg-light">
        <div class="col-lg-3 col-md-6 col-sm-9 border shadow p-5 bg-white">
            {% include 'includes/flashMessage.html.twig' %}
            <h1 class="text-center mb-3">Mot de passe oubli√©</h1>
            {{ form_start(form) }}
            {{ form_label(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'mb-3 rounded-0 p-4'}}) }}
            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-lg btn-outline-primary btn-block rounded-0'}}) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}