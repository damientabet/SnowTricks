{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Édition de figure</h1>

        <div class="row">
            <div class="col-3">
                <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                    <a class="nav-link active" id="v-pills-informations-tab" data-toggle="pill"
                       href="#v-pills-informations" role="tab"
                       aria-controls="v-pills-informations" aria-selected="true">Informations</a>
                    <a class="nav-link" id="v-pills-images-tab" data-toggle="pill" href="#v-pills-images" role="tab"
                       aria-controls="v-pills-images" aria-selected="false">Images</a>
                    <a class="nav-link" id="v-pills-videos-tab" data-toggle="pill" href="#v-pills-videos" role="tab"
                       aria-controls="v-pills-videos" aria-selected="false">Vidéos</a>
                </div>
            </div>
            <div class="col-9">
                <div class="tab-content" id="v-pills-tabContent">
                    <div class="tab-pane fade show active" id="v-pills-informations" role="tabpanel"
                         aria-labelledby="v-pills-informations-tab">
                        {{ form_start(form) }}
                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div>
                    <div class="tab-pane fade" id="v-pills-videos" role="tabpanel"
                         aria-labelledby="v-pills-videos-tab">
                        {{ form(form_video) }}
                        {% for video in videos %}
                            <div class="row">
                                <div class="col-md-9">
                                    <iframe width="420" height="200"
                                            src="{{ video.url }}">
                                    </iframe>
                                </div>
                                <div class="col-md-3">
                                    {{ video.name }}
                                    <a href="{{ path('video.delete', {'id': video.id}) }}"
                                       class="btn btn-danger"
                                       onclick="if(confirm('Are you sure ?')) {return true;} else {return false}">Delete</a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="tab-pane fade" id="v-pills-images" role="tabpanel"
                         aria-labelledby="v-pills-images-tab">
                        {{ form(form_image) }}

                        <div class="row">
                            {% for image in images %}
                                <img style="max-height: 200px" src="/images/tricks/{{ image.name }}" alt=""/>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}