{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Ã‰dition de figure</h1>
        {{ form_start(form) }}
            {{ form_rest(form) }}
        {{ form_end(form) }}

        <div class="row">
            <div class="col-md-6">
                {{ form(form_video) }}
            </div>
            <div class="col-md-6">
                {% for video in videos %}
                    <div class="row">
                        <div class="col-md-9">
                            <iframe width="420" height="200"
                                    src="{{ video.url }}">
                            </iframe>
                        </div>
                        <div class="col-md-3">
                            {{ video.name }}
                            <a href="{{ path('video.delete', {'id': video.id}) }}" class="btn btn-danger"
                               onclick="if(confirm('Are you sure ?')) {return true;} else {return false}">Delete</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}